{
	"id": "demo-dgw",
	"description": "Example Gateway",
	"publicEndpoint": "http://fqdn-of-the-host:8080",
	"staticDir": "./static",
	"catalog": [
		{
			"discover": false,
			"endpoint": "http://remotehost:8081/rc",
			"auth": {
				"provider": "auth-provider-name",
				"providerURL": "http://auth-provider-url:port/path",
				"username": "username",
				"password": "password",
				"serviceID": "scID"
			}
		}
	],
	"storage": {
		"type": "memory"
	},
	"http": {
		"bindAddr": "0.0.0.0",
		"bindPort": 8080
	},
	"protocols": {
		"REST": {
			"location": "/rest"
		},
		"MQTT": {
			"url": "tcp://127.0.0.1:1883",
			"prefix": "/demo-dgw"
		}
	},
	"auth": {
		"enabled": true,
		"provider": "auth-provider-name",
		"providerURL": "http://auth-provider-url:port/path",
		"serviceID": "serviceID",
		"authorization": {
			"rules": [
				{
					"resources": ["/rc","/rest","/dashboard"],
					"methods": ["GET"],
					"users": [],
					"groups": ["rousers"]
				},
				{
					"resources": ["/rest"],
					"methods": ["PUT"],
					"users": [],
					"groups": ["rwusers"]
				}
			]
		}
	}
}
