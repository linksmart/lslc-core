{
  "description": "Standalone Service Catalog",
  "dnssdEnabled": true,
  "bindAddr": "0.0.0.0",
  "bindPort": 8082,
  "apiLocation": "/sc",
  "staticDir": "./static",
  "storage": {
    "type": "memory"
  },
  "auth": {
		"enabled": true,
		"serverAddr": "http://cas-server-addr:8000/cas",
		"serviceID": "scID",
		"authorization": [
			{
				"resources": ["/sc"],
				"methods": ["GET"],
				"users": [],
				"groups": ["rousers"]
			},
			{
				"resources": ["/sc"],
				"methods": ["GET","POST","PUT","DELETE"],
				"users": [],
				"groups": ["rwusers"]
			}
		]
	}
}